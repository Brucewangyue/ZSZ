@model List<HousePicDTO>
@{
    ViewBag.Title = "房源配图";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section headscript
{
    <link href="~/lib/lightbox2/2.8.1/css/lightbox.css" rel="stylesheet" type="text/css">
}
<div class="pd-20">
    <div class="cl pd-5 bg-1 bk-gray"> <span class="l"> <a href="javascript:;" onclick="edit()" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe6df;</i> 编辑</a> <a href="javascript:;" onclick="datadel()" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a> </span> <span class="r">共有数据：<strong>54</strong> 条</span> </div>
    <div class="portfolio-content">
        <ul class="cl portfolio-area">
            @foreach (var housePic in Model)
            {
                <li class="item">
                    <div class="portfoliobox">
                        <input class="checkbox" name="picIds" type="checkbox" value="@housePic.Id">
                        <div class="picbox">
                            <a href="@housePic.Url" data-lightbox="gallery" data-title="图片(@housePic.Id)">
                                <img src="@housePic.ThumUrl">
                            </a>
                        </div>
                        <div class="textbox">图片(@housePic.Id)</div>
                    </div>
                </li>
            }

        </ul>
    </div>
</div>


<script type="text/javascript" src="~/lib/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/layer/1.9.3/layer.js"></script>

<script type="text/javascript" src="~/scripts/H-ui.js"></script>
<script type="text/javascript" src="~/scripts/H-ui.admin.js"></script>


<script type="text/javascript" src="~/lib/lightbox2/2.8.1/js/lightbox-plus-jquery.min.js"></script>

<script type="text/javascript">
    $(function () {
        $.Huihover(".portfolio-area li");
    });
</script>

